---
// Importar los componentes
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="submit recetas">
  <Header />

  <div class="container mx-auto px-4 py-8" style="max-width: 800px;">
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <!-- Cabecera contenedor -->
      <div class="flex justify-between items-center px-6 py-4 border-b">
        <input type="text" class="text-3xl font-bold" placeholder="Nombre de la receta">
        <div class="flex items-center space-x-4">
          <button class="text-gray-600"> <!-- Botón de favoritos -->
            <!-- SVG del icono de favoritos -->
          </button>
          <!-- Botones de compartir -->
          <div class="flex items-center space-x-2">
            <button class="text-gray-600">
              <!-- SVG icono de Facebook -->
            </button>
            <button class="text-gray-600">
              <!-- SVG icono de Twitter -->
            </button>
            <button class="text-gray-600">
              <!-- SVG icono de Instagram -->
            </button>
          </div>
        </div>
      </div>

      <!-- Campo para subir imagen de la receta -->
      <div class="mt-4 px-6">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="recipe-image">
          Subir Imagen de la Receta
        </label>
        <input type="file" id="recipe-image" class="text-sm text-gray-500 border rounded-lg p-2 w-full" accept="image/*">
      </div>

      <!-- Vista previa de la imagen cargada -->
      <img src="https://static.wikia.nocookie.net/spongebob/images/f/f8/Yellow_Butt.jpeg/revision/latest/scale-to-width-down/1200?cb=20220830125650" id="image-preview" alt="Recipe Image" class="mt-4 mb-4 m-auto rounded-lg shadow-lg h-[442px] w-[600px]" />

      <div class="container mx-auto px-4 py-8" style="max-width: 650px;">
        <!-- Información Adicional -->
        <div class="mt-8">  
          <h2 class="text-xl font-semibold mb-2">Información Adicional</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="border rounded-lg overflow-hidden text-center">
              <div class="bg-gray-100 px-4 py-2">
                <p class="text-sm text-gray-600 font-semibold">Porciones</p>
              </div>
              <div class="p-4">
                <input type="number" class="text-lg font-semibold text-center w-12" placeholder="4" required>
              </div>
            </div>
            <div class="border rounded-lg overflow-hidden text-center">
              <div class="bg-gray-100 px-4 py-2">
                <p class="text-sm text-gray-600 font-semibold">Tiempo de Preparación</p>
              </div>
              <div class="p-4">
                <input class="text-lg font-semibold text-center w-12" type="number" placeholder="20" required> minutos
              </div>
            </div>
            <div class="border rounded-lg overflow-hidden text-center">
              <div class="bg-gray-100 px-4 py-2">
                <p class="text-sm text-gray-600 font-semibold">Tiempo de Cocción</p>
              </div>
              <div class="p-4">
                <input class="text-lg font-semibold text-center w-12" type="number" placeholder="30" required> minutos
              </div>
            </div>
          </div>
        </div>

        <!-- Ingredientes -->
        <div class="mt-8 gap-4">
          <div>
            <h2 class="text-xl font-semibold mb-2">Ingredientes</h2>
            <ul id="ingredient-list" class="list-disc pl-4">
              <li><input class="resize" type="text" placeholder="Ingrediente 1"></li>
              <li><input class="resize" type="text" placeholder="Ingrediente 2"></li>
              <li><input class="resize" type="text" placeholder="Ingrediente 3"></li>
            </ul>
            <div class="flex space-x-2 mt-2">
              <button id="add-ingredient" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-1 px-2 rounded-lg text-sm">
                Agregar Ingrediente
              </button>
              <button id="remove-ingredient" class="bg-red-500 hover:bg-red-600 text-white font-semibold py-1 px-2 rounded-lg text-sm">
                Eliminar Ingrediente
              </button>
            </div>
          </div>

          <!-- Instrucciones -->
          <div class="mt-8">
            <h2 class="text-xl font-semibold mb-2">Instrucciones</h2>
            <ol id="instruction-list" class="list-decimal pl-4">
              <li><input class="resize" type="text" placeholder="Paso 1: Instrucción del paso 1"></li>
              <li><input class="resize" type="text" placeholder="Paso 2: Instrucción del paso 2"></li>
              <li><input class="resize" type="text" placeholder="Paso 3: Instrucción del paso 3"></li>
            </ol>
            <div class="flex space-x-2 mt-2">
              <button id="add-instruction" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-1 px-2 rounded-lg text-sm">
                Agregar Instrucción
              </button>
              <button id="remove-instruction" class="bg-red-500 hover:bg-red-600 text-white font-semibold py-1 px-2 rounded-lg text-sm">
                Eliminar Instrucción
              </button>
            </div>
          </div>
        </div>

        <div class="py-4 flex justify-center">
          <button type="submit" class="w-[200px] bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg items-center">
            Subir
          </button>
        </div>    
      </div>
    </div>
  </div>
  <Footer />

  <!-- JavaScript para manejo de dinámicas de la página -->
  <script is:inline>
    // Añadir y eliminar ingredientes
    document.getElementById('add-ingredient').addEventListener('click', () => {
      const ingredientList = document.getElementById('ingredient-list');
      const newIngredient = document.createElement('li');
      newIngredient.innerHTML = '<input class="resize" type="text" placeholder="Nuevo Ingrediente">';
      ingredientList.appendChild(newIngredient);
    });

    document.getElementById('remove-ingredient').addEventListener('click', () => {
      const ingredientList = document.getElementById('ingredient-list');
      if (ingredientList.children.length > 0) {
        ingredientList.removeChild(ingredientList.lastChild);
      }
    });

    // Añadir y eliminar instrucciones
    document.getElementById('add-instruction').addEventListener('click', () => {
      const instructionList = document.getElementById('instruction-list');
      const newInstruction = document.createElement('li');
      newInstruction.innerHTML = '<input class="resize" type="text" placeholder="Nueva Instrucción">';
      instructionList.appendChild(newInstruction);
    });

    document.getElementById('remove-instruction').addEventListener('click', () => {
      const instructionList = document.getElementById('instruction-list');
      if (instructionList.children.length > 0) {
        instructionList.removeChild(instructionList.lastChild);
      }
    });

    // Vista previa de la imagen cargada
    document.getElementById('recipe-image').addEventListener('change', (event) => {
      const file = event.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = (e) => {
          document.getElementById('image-preview').src = e.target.result;
        };
        reader.readAsDataURL(file);
      }
    });
  </script>
</Layout>