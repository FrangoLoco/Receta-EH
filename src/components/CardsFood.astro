---
interface Props {
	title: string;
	body: string;
	href: string;
	src: string;
}

const { href, title, body , src } = Astro.props;
---

<div class="relative">
  <a href={href} class="block bg-white shadow-md rounded-lg overflow-hidden transition duration-300 transform hover:scale-105">
    <img src={src} alt={title} class="h-48 w-full object-cover" />
    <div class="p-4">
      <h3 class="text-xl font-semibold mb-2">{title}</h3>
      <p class="text-gray-700">{body}</p>
    </div>
  </a>
  <button class="absolute top-2 right-2 bg-gray-200 rounded-full p-2 transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 hover:bg-red-500 duration-300">
    <svg class="w-6 h-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="cuColor">
      <path fill-rule="evenodd" clip-rule="evenodd" d="M12 6.00019C10.2006 3.90317 7.19377 3.2551 4.93923 5.17534C2.68468 7.09558 2.36727 10.3061 4.13778 12.5772C5.60984 14.4654 10.0648 18.4479 11.5249 19.7369C11.6882 19.8811 11.7699 19.9532 11.8652 19.9815C11.9483 20.0062 12.0393 20.0062 12.1225 19.9815C12.2178 19.9532 12.2994 19.8811 12.4628 19.7369C13.9229 18.4479 18.3778 14.4654 19.8499 12.5772C21.6204 10.3061 21.3417 7.07538 19.0484 5.17534C16.7551 3.2753 13.7994 3.90317 12 6.00019Z" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </button>
</div>


