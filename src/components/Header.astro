<script>
document.getElementById("boton-menu-header").addEventListener("click",mostrar)

function mostrar(){
    document.getElementById("side-bar").style.display = "block"
}

</script>
        
<header class="bg-white shadow-lg">
    <div class="container mx-auto px-4 py-6 flex justify-between items-center">
        <div class="flex items-center">
            <a href="/" class="text-xl font-bold text-gray-800">Recetas EH</a>
            <form action="#" class="ml-4">
                <input type="text" placeholder="Buscar recetas" class="border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring focus:ring-blue-200">
                <button type="submit" class="inline-block ml-2 px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600">
                    <svg class="inline" width="24px" height="24px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M15.7955 15.8111L21 21M18 10.5C18 14.6421 14.6421 18 10.5 18C6.35786 18 3 14.6421 3 10.5C3 6.35786 6.35786 3 10.5 3C14.6421 3 18 6.35786 18 10.5Z" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    Buscar</button>
            </form>
        </div>
        <nav>
            <ul class="flex items-center space-x-4">
                <li><a href="log-in" class="text-gray-800 hover:text-blue-500">Log in</a></li>
                <li><a href="about-us" class="text-gray-800 hover:text-blue-500">Acerca</a></li>
            </ul>
        </nav>
    </div>
</header>